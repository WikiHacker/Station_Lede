
. /lib/functions.sh
. /lib/functions/uci-defaults.sh
. /lib/functions/system.sh

firefly_setup_macs()
{
    local board="$1"
    local lan_mac=""
    local wan_mac=""

    case "$board" in
    firefly,rk3308b-roc-cc-plus-amic-ext_emmc)
        lan_mac=$(macaddr_setbit_la "$(cat /sys/class/net/eth0/address)")
        wan_mac=$(macaddr_add "$lan_mac" 1)
        ;;  
    esac

    [ -n "$lan_mac" ] && ucidef_set_interface_macaddr "lan" $lan_mac
    [ -n "$wan_mac" ] && ucidef_set_interface_macaddr "wan" $wan_mac
}

firefly_setup_interfaces()
{
    local board="$1"
    case "$board" in
    firefly,rk3308b-roc-cc-plus-amic-ext_emmc)
        ucidef_set_interfaces_lan_wan "eth0" "eth1"
        # 4G EC200S
        ucidef_set_interface "wan_ec200s" device "usb0" protocol "dhcp"
        ;;
    *)
        ucidef_set_interfaces_lan_wan "eth0" "eth1"
        ucidef_set_interface "wan_ec20" device "wwan0" protocol "dhcp"
        ;;
    esac
}

board_config_update
board=$(board_name)
firefly_setup_interfaces $board
firefly_setup_macs $board
board_config_flush

exit 0
